page {
    display: flex;
    flex-direction: column;
    height: 100%;
}
/*切换  */
scroll-view {
    overflow-x: auto;
}
.navbar {
    flex: none;
    background: #fff;
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar .item {
    line-height: 88rpx;
    height: 90rpx;
    padding: 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}

.navbar .item.active {
    color: #f03d37;
    border-bottom: 4rpx solid #f03d37;
}

/*影院  */
.cinema{
    padding: 25rpx 0;
    border-bottom: 1rpx solid #e6e6e6;
}
.cinema_name{
    display: flex;
    align-items: center;
}
.cinema_name>text{
    font-size: 32rpx;
    margin-right: 20rpx;
}
.cinema_name>view>text{
    color: #f03d37;
    font-size: 32rpx;
}
.cinema_name>view>text:last-child{
    font-size: 22rpx;
}
.cinema_add{
    color:#666;
    font-size: 26rpx;
}
.cinema_item>text{
    font-size: 22rpx;
    border: 1rpx solid #3c9fe6;
    color: #3c9fe6;
    border-radius: 5rpx;
    padding: 0rpx 7rpx;
    margin-right: 6rpx;
}
.cinema_card{
    background: rgb(162,125,218);
    font-size: 22rpx;
    color: white;
    border-radius: 5rpx;
    padding: 0rpx 6rpx;
}
.card_intro{
    color: #999;
    font-size: 22rpx;
    margin-left: 10rpx;
}
.cinema_info>view{
    margin: 4rpx 0;
}
.distance{
    color: #999;
    font-size: 26rpx;
}
/*hover效果  */
.hover{
    background: #f5f5f5; 
}