page {
    background: #f5f5f5;
}
image{
    width: 400rpx;
    height: 245rpx;
}
.red{
    background: #f03d37;
    color: white;
}
.no_film{
    font-size: 30rpx;
    margin-bottom: 30rpx;
}
.title {
    padding: 15rpx 20rpx;
    color: #666;
    font-size: 26rpx;
}

.wantFilm_container {
    background: white;
}

.wantFilm_list {
    padding: 0 20rpx;
    padding-right: 0;
}

.wantFilm_list_inner {
    padding: 20rpx 0;
    display: flex;
    border-bottom: 1rpx solid #e6e6e6;
}

.wantFilm_img {
    margin-right: 20rpx;
    height: 188rpx;
    position: relative;
}

.wantFilm_img>image:first-child {
    width: 135rpx;
    height: 188rpx;
}

 .wantFilm_info {
    margin: 25rpx 0;
    box-sizing: border-box;
    display: flex;
    width: 456rpx;
    color: #faaf00;
    font-size: 26rpx;
    align-items: center;
} 

.wantFilm_actor {
    width: 420rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #666;
    font-size: 26rpx;
}
.film_3D {
    margin-top: 6rpx;
    font-size: 22rpx;
    border: 1rpx solid #3c9fe6;
    border-radius: 6rpx;
    color: white;
    background: #3c9fe6;
    transform: scale(0.85);
    padding: 0 6rpx;
    padding-bottom: 2rpx;
    margin-bottom: 3rpx;
}
.point{
    margin-left: 8rpx;
}
/*星星  */

.star>image {
    width: 28rpx;
    height: 28rpx;
    margin: 0 2rpx;
}
.star{
    position: relative;
    top:3rpx;
}
.hover{
    background: #f5f5f5;
}