page {
    background: #f5f5f5;
}
.cat{
    width: 400rpx;
    height: 245rpx;
}
.red{
    background: #f03d37;
    color: white;
}
.no_film{
    font-size: 30rpx;
    margin-bottom: 30rpx;
}
.ticket_container {
    background: white;
    padding-left: 20rpx;
    border-bottom: 1rpx solid #e6e6e6;
}
.gray {
    background: #f5f5f5;
    width: 100%;
    height: 20rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

image {
    width: 122rpx;
    height: 169rpx;
}

.film_name {
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #666;
    padding-right: 20rpx;
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    align-items: center;
}
.film_name>image{
    width: 35rpx;
    height: 35rpx;
    position: relative;
    top:2rpx;
}
.film_info {
    padding: 20rpx 0;
    display: flex;
    font-size: 26rpx;
    color: #666;
    border-bottom: 1rpx solid #e6e6e6;
}

.ticket_info {
    padding: 10rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.ticket_info>view:first-child {
    font-size: 30rpx;
    color: black;
}

.price {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
    padding-right: 20rpx;
    font-size: 28rpx;
    color: #666;
}
