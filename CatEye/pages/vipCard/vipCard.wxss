page {
    background: #f5f5f5;
}

.sale_img {
    width: 65rpx;
    height: 65rpx;
    margin-right: 20rpx;
}

.card {
    margin: 25rpx;
    border-radius: 18rpx;
    color: white;
    height: 380rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
}
.card:nth-child(odd){
    background: #3474bc;
}
.card:nth-child(even){
    background: rgb(118,71,157)
}
.head {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    padding: 30rpx;
}

.middle {
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 80rpx;
}

.bottom {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    background-color: rgba(0, 0, 0, 0.08);
    padding: 15rpx 20rpx;
    border-bottom-right-radius: 18rpx;
    border-bottom-left-radius: 18rpx;
    align-items: center;
}

.price {
    background-color: rgba(0, 0, 0, 0.1);
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    margin-right: 10rpx;
    display: flex;
    align-items: center;
}

.store {
    position: absolute;
    right: 0;
    border: 68rpx solid transparent;
    border-top-right-radius: 18rpx;
    border-top-color: rgba(0, 0, 0, 0.1);
    border-right-color: rgba(0, 0, 0, 0.1);
}

.store_text {
    color: white;
    position: absolute;
    z-index: 1;
    right: 3rpx;
    top: 28rpx;
    font-size: 26rpx;
    transform: rotate(45deg);
}

image {
    width: 400rpx;
    height: 245rpx;
}

.no_card {
    font-size: 30rpx;
    margin-bottom: 30rpx;
}
.right{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.buy_card {
    border: 1rpx solid #f03d37;
    color: #f03d37;
    border-radius: 8rpx;
    width: 350rpx;
    margin: 0 auto;
    text-align: center;
    padding: 15rpx 0;
    font-size: 32rpx;
}

.red {
    background: #f03d37;
    color: white;
}
