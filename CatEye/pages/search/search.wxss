page {
    background: #f5f5f5;
}

.navbar {
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    align-items: center;
    height: 84rpx;
    background: #f5f5f5;
}

.search_input {
    border: 1rpx solid #e6e6e6;
    width: 100%;
    margin-left: 20rpx;
    border-radius: 8rpx;
    background: white;
    height: 54rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.search_input>input {
    width: 100%;
    font-size: 26rpx;
    padding-right: 15rpx;
}

.search_icon {
    width: 28rpx;
    height: 28rpx;
    margin: 15rpx;
}

.cancle {
    width: 68rpx;
    margin: 20rpx;
    font-size: 28rpx;
    color: #f03d37;
}

/*没有数据  */

.noSearch {
    margin-top: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 28rpx;
}

.noSearch>image {
    width: 400rpx;
    height: 250rpx;
}

/*展示  */

.film_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #e6e6e6;
    color: #666;
    font-size: 28rpx;
    background: white;
}

.searchFilm_list {
    padding: 0 20rpx;
    padding-right: 0;
    background: white;
}

.searchFilm_list_inner {
    padding: 20rpx 0;
    display: flex;
    border-bottom: 1rpx solid #e6e6e6;
}

.searchFilm_list_inner:last-child {
    border-bottom: 0;
}

.searchFilm_img {
    margin-right: 20rpx;
    height: 188rpx;
    position: relative;
}

.searchFilm_img>image:first-child {
    width: 135rpx;
    height: 188rpx;
}

.searchFilm_info {
    margin-top: 6rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 456rpx;
    justify-content: space-between;
    color: #666;
    font-size: 26rpx;
    height: 130rpx;
}

.searchFilm_actor {
    width: 420rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.searchFilm_name {
    width: 420rpx;
}

.comingFilm_name {
    width: 490rpx;
}

.searchFilm_name>text:first-child {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.user_point>text {
    color: #faaf00;
    font-size: 28rpx;
    font-weight: 500;
}

.user_point>text:last-child {
    font-size: 22rpx;
    font-weight: normal;
}

.button {
    border-radius: 8rpx;
    height: 55rpx;
    width: 94rpx;
    text-align: center;
    line-height: 55rpx;
    font-size: 24rpx;
    background: #f03d37;
    color: white;
    font-weight: normal;
}

/*影院  */

.cinema {
    padding: 25rpx 0;
    padding-right: 20rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

navigator:last-child>.cinema {
    border-bottom: 0;
}

.cinema_name {
    display: flex;
    align-items: center;
}

.cinema_name>text {
    font-size: 32rpx;
    margin-right: 20rpx;
}

.cinema_name>view>text {
    color: #f03d37;
    font-size: 32rpx;
}

.cinema_name>view>text:last-child {
    font-size: 22rpx;
}

.cinema_add {
    color: #666;
    font-size: 26rpx;
}

.cinema_item>text {
    font-size: 22rpx;
    border: 1rpx solid #3c9fe6;
    color: #3c9fe6;
    border-radius: 5rpx;
    padding: 0rpx 7rpx;
    margin-right: 6rpx;
}

.cinema_card {
    background: rgb(162, 125, 218);
    font-size: 22rpx;
    color: white;
    border-radius: 5rpx;
    padding: 0rpx 6rpx;
}

.card_intro {
    color: #999;
    font-size: 22rpx;
    margin-left: 10rpx;
}

.cinema_info>view {
    margin: 4rpx 0;
}

.distance {
    color: #999;
    font-size: 26rpx;
}

/*hover效果  */

.hover {
    background: #f5f5f5;
}

.gray {
    background: #f5f5f5;
    width: 100%;
    height: 20rpx;
}
